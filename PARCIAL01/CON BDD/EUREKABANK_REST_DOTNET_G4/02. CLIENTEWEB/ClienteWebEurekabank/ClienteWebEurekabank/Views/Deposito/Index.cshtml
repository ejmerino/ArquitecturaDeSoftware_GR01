@model ClienteWebEurekabank.Models.OperacionModel

@{
    ViewData["Title"] = "Depósito";
}

<h2 class="text-center mb-4">💰 Realizar Depósito</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> Corrige los datos antes de continuar.
    </div>
}

@if (!string.IsNullOrEmpty(Model?.Mensaje))
{
    <div class="alert alert-warning">@Model.Mensaje</div>
}

<form asp-action="Deposito" method="post" class="border rounded p-4 shadow-sm bg-light">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="NumeroCuenta" class="form-label">Número de Cuenta</label>
        <input asp-for="NumeroCuenta" class="form-control" placeholder="Ej: 0000200001" required />
        <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Valor" class="form-label">Monto del Depósito</label>
        <input asp-for="Valor" type="number" step="any" min="0.01" class="form-control" placeholder="Ej: 100.50" required />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success w-100">Depositar</button>
</form>

<div class="mt-4 text-center">
    <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary m-2">⬅️ Volver al Menú</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
