@{
    ViewData["Title"] = "Registro de Usuario";
}

<style>
    .register-container {
        max-width: 500px;
        margin: 20px auto;
        padding: 30px;
        border: 2px solid #800080; /* Contorno morado */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        background-color: #add8e6; /* Fondo celeste */
        color: #000;
    }

    .register-form {
        margin-top: 20px;
    }

    .form-control {
        border-radius: 4px;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 10px;
    }

    .btn-custom {
        background-color: #800080; /* Morado oscuro */
        border: 2px solid #FFD700; /* Borde amarillo */
        color: #FFD700; /* Texto amarillo */
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
        margin-top: 20px; /* Espacio adicional arriba del botón */
    }

        .btn-custom:hover {
            background-color: #4B0082; /* Morado más oscuro para el hover */
            border-color: #FFD700; /* Mantiene el borde amarillo */
            color: #fff; /* Texto blanco al hacer hover */
        }

    .btn-secondary {
        background-color: #f8f9fa; /* Fondo claro */
        border: 2px solid #6c757d; /* Borde gris */
        color: #6c757d; /* Texto gris */
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
        margin-top: 20px; /* Espacio adicional arriba del botón */
    }

        .btn-secondary:hover {
            background-color: #e2e6ea; /* Fondo más oscuro para el hover */
            border-color: #6c757d; /* Mantiene el borde gris */
            color: #000; /* Texto negro al hacer hover */
        }
</style>

<div class="register-container">
    <h1 class="text-center">Registro de Usuario</h1>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

    <form method="post" action="@Url.Action("Register", "Home")" class="register-form">
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" class="form-control" id="nombre" name="nombre" required />
        </div>
        <div class="form-group">
            <label for="apellido">Apellido:</label>
            <input type="text" class="form-control" id="apellido" name="apellido" required />
        </div>
        <div class="form-group">
            <label for="correo">Correo:</label>
            <input type="email" class="form-control" id="correo" name="correo" required />
        </div>
        <div class="form-group">
            <label for="telefono">Teléfono:</label>
            <input type="text" class="form-control" id="telefono" name="telefono" required />
        </div>
        <div class="form-group">
            <label for="cedula">Cédula:</label>
            <input type="text" class="form-control" id="cedula" name="cedula" required />
        </div>
        <div class="form-group">
            <label for="rol">Rol:</label>
            <select class="form-control" id="rol" name="rol" required>
                <option value="Administrador">Administrador</option>
                <option value="Usuario">Usuario</option>
            </select>
        </div>
        <div class="form-group">
            <label for="contrasena">Contraseña:</label>
            <input type="password" class="form-control" id="contrasena" name="contrasena" required />
        </div>
        <button type="submit" class="btn btn-custom btn-block">Registrar</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-block">Volver al Inicio</a>
    </form>
</div>
