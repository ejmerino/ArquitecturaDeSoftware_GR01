<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="8dp"
    android:background="@drawable/bg_card" android:layout_marginBottom="8dp">

    <!-- Fila 1: Fecha (izq)  -  Importe (der) -->
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblFecha"
            android:text="2025-11-11"
            android:textStyle="bold"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lblImporte"
            android:text="$0.00"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Fila 2: Tipo (izq)  -  Saldo (der) -->
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/lblTipo"
            android:text="Deposito"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/lblSaldo"
            android:text="$0.00"
            android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
